// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// In Prisma 7, the connection URL is set in prisma.config.ts, not here.
datasource db {
  provider = "postgresql"
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  STUDENT
  ADMIN
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ClassType {
  HATHA
  YIN
  BOTH
}

enum ClassStatus {
  SCHEDULED
  ONGOING
  COMPLETED
  CANCELLED
}

enum BookingStatus {
  CONFIRMED
  ATTENDED
  MISSED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum ContentType {
  BLOG_POST
  RESOURCE
  ANNOUNCEMENT
  PRACTICE_GUIDE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For email/password auth
  role          UserRole  @default(STUDENT)
  status        UserStatus @default(PENDING)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  registration  Registration?
  bookings      Booking[]
  payments      Payment[]
  progress      Progress[]
}

// Registration questionnaire model
model Registration {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Questionnaire fields
  experience    String?  // yoga experience level
  goals         String?  // what they hope to achieve
  injuries      String?  // any injuries or limitations
  preferences   String?  // class preferences (hatha/yin/both)
  availability  String?  // preferred class times
  additionalInfo String? // any additional information

  submittedAt   DateTime @default(now())
  reviewedAt    DateTime?
  reviewedBy    String?  // admin user ID

  @@index([userId])
}

// Class/Session model
model Class {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        ClassType
  instructor  String   // Samyuktha Nambiar
  date        DateTime
  duration    Int      // minutes
  meetLink    String?  // Google Meet link
  maxStudents Int      @default(20)
  status      ClassStatus @default(SCHEDULED)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings    Booking[]

  @@index([date])
  @@index([status])
}

// Booking model
model Booking {
  id          String   @id @default(cuid())
  userId      String
  classId     String
  status      BookingStatus @default(CONFIRMED)
  reminderSent Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  class       Class    @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@unique([userId, classId])
  @@index([userId])
  @@index([classId])
  @@index([status])
}

// Payment model
model Payment {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  currency    String   @default("USD")
  status      PaymentStatus @default(PENDING)
  method      String?  // stripe, paypal, etc.
  transactionId String?
  description String?
  dueDate     DateTime?
  paidAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([dueDate])
}

// Progress tracking model
model Progress {
  id          String   @id @default(cuid())
  userId      String
  metric      String   // e.g., "classes_attended", "practice_days", "flexibility_goal"
  value       Float
  notes       String?
  recordedAt  DateTime @default(now())
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([recordedAt])
}

// Content management model
model Content {
  id          String   @id @default(cuid())
  type        ContentType
  title       String
  content     String   // markdown or text
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdBy   String?  // admin user ID
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([published])
}

// AI Assistant memory model
model AIMemory {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  context     String?  // additional context
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([key])
}